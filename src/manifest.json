{

    "manifest_version": 2,
    "name": "iCampus downloader",
    "description": "Download iCampus videos",
    "version": "0.3.0",
    "permissions": [
        "tabs",
        "downloads",
        "activeTab",
        "https://*.skku.edu/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://*.skku.edu/*"
            ],
            "js": ["script.js"],
            "all_frames": true
        }
    ],

    "browser_action": {
        "default_icon": "logo.png"
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "background": {
        "scripts": ["background.js"]
    }
}